<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondView">

    <Button
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/add_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="88dp"
        android:layout_height="41dp"
        android:layout_marginTop="80dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toEndOf="@+id/file"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="264dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/description"
        android:layout_width="145dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="136dp"
        android:text="@string/description"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textRatName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRat" />

    <TextView
        android:id="@+id/file"
        android:layout_width="87dp"
        android:layout_height="42dp"
        android:layout_marginTop="80dp"
        android:text="@string/file_no"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRat"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="68dp"
        android:text="RAT"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/file" />

    <CheckBox
        android:id="@+id/checkBoxCoco"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="36dp"
        android:text="Coco"
        app:layout_constraintStart_toEndOf="@+id/textRat"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        />

    <CheckBox
        android:id="@+id/checkBoxXenia"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:text="Xenia"
        app:layout_constraintStart_toEndOf="@+id/textRat"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCoco"
        />

    <CheckBox
        android:id="@+id/checkBoxMiya"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:text="Miya"
        app:layout_constraintStart_toEndOf="@+id/textRat"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxXenia"

       />

    <CheckBox
        android:id="@+id/checkBoxMimi"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:text="Mimi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkBoxCoco"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        />

    <CheckBox
        android:id="@+id/checkBoxMiki"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Miki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkBoxXenia"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxMimi"
        />

    <CheckBox
        android:id="@+id/checkBoxOther"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Other"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkBoxMiya"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxMiki" />

    <TextView
        android:id="@+id/Emotion"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:text="Emotion"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescription"
        app:layout_constraintVertical_bias="0.018" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Emotion"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescription"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/textRatName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratName" />

    <TextView
        android:id="@+id/ratName"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:layout_marginTop="4dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxOther" />

</androidx.constraintlayout.widget.ConstraintLayout>